<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/aliwx_color_blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_shoping_pop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_price_shoping_pop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥29.9"
                android:textColor="@color/colorBase" />

            <TextView
                android:id="@+id/tv_stocknum_shoping_pop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="库存3000件"
                android:textColor="@color/colorBack" />

            <TextView
                android:id="@+id/tv_restrict_purchase_num_shoping_pop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="限购2件"
                android:textColor="@color/colorBack" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="购买数量"
            android:textColor="@color/colorBack" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reduce_shoping_pop"

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/selector_reduce_num"
                android:gravity="center"
                android:text="—" />

            <TextView
                android:id="@+id/tv_show_shoping_pop"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="  1 " />

            <TextView
                android:id="@+id/tv_add_shoping_pop"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/selector_add_num"
                android:gravity="center"
                android:text="+" />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBack"></View>

        <TextView
            android:id="@+id/tv_btnsure_shoping_pop"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorBase"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/aliwx_bg_color_white" />
    </LinearLayout>

</LinearLayout>
